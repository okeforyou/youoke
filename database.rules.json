{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "rooms": {
      "$roomCode": {
        ".read": true,
        ".write": true,
        "commands": {
          ".read": true,
          ".write": true,
          ".indexOn": ["timestamp", "status"]
        },
        "state": {
          ".read": true,
          ".write": true
        },
        "participants": {
          ".read": true,
          ".write": true
        }
      }
    }
  }
}
